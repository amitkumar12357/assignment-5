<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link rel="stylesheet" href="/css/theme.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 table-responsive">
                <br>
                <h2>Courses</h2>
                <hr />
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Course Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each courses}}
                        <tr>
                            <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                            <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{#unless courses}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
            {{/unless}}
        </div>
    </div>
</body>
</html>
